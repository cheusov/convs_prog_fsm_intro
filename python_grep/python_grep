#!/usr/bin/env python3

import sys
import re

def grep(pattern, file):
    with open(file, 'r') as f:
        for line in f:
            if pattern.search(line):
                print(line, end='')

if __name__ == "__main__":
    if len(sys.argv) < 3:
        print("Usage: python grep.py <pattern> <file>")
        sys.exit(1)

    pattern = re.compile(sys.argv[1])
    file = sys.argv[2]

    grep(pattern, file)
